
extends simple-base
block content
    nav.navbar.bg-light.border-bottom
        .container-fluid
            span.navbar-brand.mb-0.h1 address: 192.168.1.1
    .container.px-4.py-4
        .row.gx-5
            .col
                .p-3
                    h3 Registru casa
            .col
                .p-3
                    h3 dd_mm_yyyy
            .col
                .p-3
                    button.btn.btn-danger.btn-lg(type='button') Finalizare zi
    .container
        table.table.table-bordered.table-hover
            thead
                tr
                    th(scope='col') Tichet Nr.
                    th(scope='col') Cost
                    th(scope='col') Payment type
                    th(scope='col') Timestamp
                    th(scope='col') Mentiune
            tbody
                tr
                    th 602225
                    td 225
                    td Cash
                    td 10:01
                    td smth
    .container.px-4.mt-5
        .row
            .col-6.border
                h4 Raport:
            .col.border
                h4 Cash: 115 RON
            .col.border
                h4 Card: 50 RON
    .container.px-4.mt-5
        .row
            .col
                button.btn.btn-primary.btn-lg(type='button' data-bs-toggle='modal' data-bs-target='#incasareModal') Incasare
            .col
                button.btn.btn-primary.btn-lg.float-end(type='button' data-bs-toggle='modal' data-bs-target='#plataModal') Plata
    // Modal
    #incasareModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog.modal-dialog-centered
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Inregistrare incasare noua
                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                .modal-body
                    form
                        .row.mb-3
                            label.col-sm-3.col-form-label(for='inputTichet') Tichet
                            .col-sm-9
                                input#inputTichet.form-control(type='text')
                        .row.mb-3
                            label.col-sm-3.col-form-label(for='inputCost') Cost(RON)
                            .col-sm-9
                                input#inputCost.form-control(type='number')
                        .row.mb-3
                            label.col-sm-3.col-form-label(for='inputPlata') Tip plata
                            .col-sm-9
                                select.form-select(aria-label='Default select example')
                                    option(value='cash') Cash
                                    option(value='card') Card
                        .row.mb-3
                            label.col-sm-3.col-form-label(for='inputMentiune') Mentiune
                            .col-sm-9
                                input#inputMentiune.form-control(type='text')
                        .row.px-2
                            .alert.alert-warning.alert-dismissible.fade.show(role='alert')
                                | Toate campurile sunt obligatorii!
                                button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
                .modal-footer
                    button.btn.btn-secondary(type='button' data-bs-dismiss='modal')
                        | Cancel
                    button.btn.btn-primary(type='submit') Save
    #plataModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog.modal-dialog-centered
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title
                        | Inregistrare incasare noua
                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                .modal-body
                    form
                        .row.mb-3
                            label.col-sm-3.col-form-label(for='inputTichet') Tichet
                            .col-sm-9
                                input#inputTichet.form-control(type='text')
                        .row.mb-3
                            label.col-sm-3.col-form-label(for='inputCost') Cost(RON)
                            .col-sm-9
                                input#inputCost.form-control(type='number')
                        .row.mb-3
                            label.col-sm-3.col-form-label(for='inputMentiune') Mentiune
                            .col-sm-9
                                input#inputMentiune.form-control(type='text')
                        .row.px-2
                            .alert.alert-warning.alert-dismissible.fade.show(role='alert')
                                | Toate campurile sunt obligatorii!
                                button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
                .modal-footer
                    button.btn.btn-secondary(type='button' data-bs-dismiss='modal')
                        | Cancel
                    button.btn.btn-primary(type='submit') Save
