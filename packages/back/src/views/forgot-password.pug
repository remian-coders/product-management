extends simple-base
block content
    .container.text-center.p-5
        form.col-12.col-sm-8.col-md-6.col-lg-4.m-auto.p-5.mt-5.border.rounded
            h3.mb-3 Enter your email
            .form-floating.mb-3
                input#floatingInput.form-control(type='email' placeholder='name@example.com')
                label(for='floatingInput') Email address
            .mb-3
                a.text-decoration-none(href='login.html') Log in
            button.btn.btn-primary(type='submit') Send

