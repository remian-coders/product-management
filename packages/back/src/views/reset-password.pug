extends simple-base
block content
    .container.text-center.p-5
        form.col-12.col-sm-8.col-md-6.col-lg-4.m-auto.p-5.mt-5.border.rounded
            h3.mb-3 Reset your password
            .form-floating.mb-3
                input#floatingPassword.form-control(type='password' placeholder='Password')
                label(for='floatingPassword') New Password
            .form-floating.mb-3
                input#floatingConfirmPassword.form-control(type='password' placeholder='Confirm Password')
                label(for='floatingConfirmPassword') Confirm Password
            .mb-3
                a.text-decoration-none(href='/admin') Login
            button.btn.btn-primary(type='submit') Reset

