extends base

block content 
    .container.mt-5.py-5
        .input-group.mb-3
            input.form-control(type='text' placeholder='example: 192.168.1.1' aria-label='IP Address' aria-describedby='button-addon2')
            button#button-addon2.btn.btn-outline-success(type='button') Add
    .container
        table.table.table-bordered.table-hover
            thead
                tr
                    th(scope='col') #
                    th(scope='col') IP Address
                    th(scope='col') Action
            - var i = 0
            tbody
                each value in ips
                    tr
                        th= i++
                        td=value.ip
                        td.d-flex.justify-content-center
                            button.btn.btn-outline-danger(type='button') Delete